@model IEnumerable<SportsStore.Domain.Entities.ProductCategory>

@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg" })

@foreach (var category in Model)
{
    @Html.RouteLink(category.Name,
        new
        {
            controller = "Product",
            action = "List",
            category = category.CategoryID,
            page = 1
        },
        new
        {
            @class = "btn btn-block btn-default btn-lg"
                + (category.CategoryID == ViewBag.SelectedCategory ? " btn-primary" : "")
        })
}
